
<FourthScreen>:
	FloatLayout:
		MDIconButton:
        	id: left_b
            icon: "led-on"
            pos_hint: {"center_x": .40, "center_y": .5}
            user_font_size: "64sp"
            on_press : root.request_turn_on()

        MDIconButton:
			id: right_b
        	icon: "led-off"
        	pos_hint: {"center_x": .60, "center_y": .5}
        	user_font_size: "64sp"
        	on_press : root.request_turn_off()

        MDIconButton:
            id: center_b
            icon: "server"
            pos_hint: {"center_x": .5, "center_y": .9}
            user_font_size: "64sp"
            on_press : root.api_status()


        MDLabel:
            id: server_status
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: (0.4, 0.1)
            halign: "center"
            font_style: "Caption"
            text: " Server Response: "
            theme_text_color: "Custom"
            text_color: rgba('#568A2F')